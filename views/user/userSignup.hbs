<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none mt-2 d-xl-block">
                            <img src="https://nexergroup.com/wp-content/uploads/2021/04/commerce_vald-scaled-540x810.jpg.webp"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-5">
                            <div class="card-body p-md-4 text-black">
                                <h3 class="mb-5 text-uppercase">Create an account</h3>
                              
                              
                                <form action="/user/signedUp" method="post">
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1m" name="first_name"
                                                    class="form-control form-control-lg" required/>
                                                <label class="form-label" for="form3Example1m">First name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1n" name="last_name"
                                                    class="form-control form-control-lg" required/>
                                                <label class="form-label" for="form3Example1n">Last name</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example8" name="password"
                                            class="form-control form-control-lg" required/>
                                        <label class="form-label" for="form3Example8">Enter password</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example8" name="office_ad"
                                            class="form-control form-control-lg" required />
                                        <label class="form-label" for="form3Example8">Re-enter password</label>
                                    </div>



                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <select name="state" class="form-control select" required>
                                                <option value="1">State</option>
                                                <option value="2">Kerala</option>
                                                <option value="3">Tamil Nadu</option>
                                                <option value="4">Karnataka</option>
                                                <option value="4">Andhra Pradesh</option>

                                            </select>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <select name="city" class="select form-control" required>
                                                <option value="1">City</option>
                                                <option value="2">Option 1</option>
                                                <option value="3">Option 2</option>
                                                <option value="4">Option 3</option>
                                            </select>

                                        </div>
                                    </div>


                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example90" name="pincode"
                                            class="form-control form-control-lg" required/>
                                        <label class="form-label" for="form3Example90">Pincode</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="form3Example97" name="email_id"
                                            class="form-control form-control-lg" required />
                                        <label class="form-label" for="form3Example97">Email ID</label>
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <a href="/user/signUp">
                                        <button type="button" class="btn btn-light btn-lg">Reset
                                                all</button>
                                        </a>
                                        <button type="submit" class="btn form-control btn-warning btn-lg ms-2">Submit form</button>
                                    </div>
                                    <div class="mt-3">
                                         <p>Already have an account <a href="/user/logIn">Login</a></p>
                                        </div>

                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>