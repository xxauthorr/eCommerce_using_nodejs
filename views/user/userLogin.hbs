
<form style="padding-top: 5em;padding-right:30em;padding-left:30em" method="post" action="/user/logIn">

    <div class="text-center" style="padding-bottom: 18px; font-family:'Merriweather', serif;">
        <h1>User Login</h1>
        {{#if wrong}}
        <h3 class="text-center text-danger">Invalid Login</h3>
        {{/if}}
    </div>
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="email" id="form2Example1" name="email_id" 
    
     class="form-control" required/>
    <label class="form-label" for="form2Example1">Email address</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" id="form2Example2" name="password" class="form-control" required/>
    <label class="form-label" for="form2Example2">Password</label>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Remember me </label>
      </div>
    </div>

    <div class="col">
      <!-- Simple link -->
      <a href="/usr/forgotPass">Forgot password?</a>
    </div>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>New here? <a href="/user/signUp">Register</a></p>
    <a href="/">Home</a>
  </div>
</form>