<body>
    <div>
<section class="container float-left" style="width: 70%;">
    {{#if message}}
    <h1 class="text-center mt-5" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">{{message}}</h1>
    {{else}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Product Name</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>
        <tbody>
            <a href="#">
                {{#each products}}
                <tr>
                    
                    <th scope="row">{{this.product.Product_id}}</th>
                    <td>{{this.product.product_name}}</td>
                    <td><img src="/images/{{this.product._id}}.jpg" style="height:2cm;width:2cm"><a href="/user/viewproduct/?id={{this.product._id}}" style="color:red;font-size:smaller">Show</a></td>
                    <td>{{this.product.price}}/-</td>
                    <td style="font-weight: bold;">
                        <a class="pr-3 font-weight-bold btn-light btn-sm"  href="/product-inc-dec/?cart={{this._id}}&product={{this.product._id}}&qnty={{this.quantity}}&count=-1" style="color:red">-</a>
                        {{this.quantity}}
                        <a class="pr-3 btn-light btn-sm" href="/product-inc-dec/?cart={{this._id}}&qnty={{this.quantity}}&product={{this.product._id}}&count=1" style="color:green;font-weight:bolder">+</a> </td>
                </tr>
                {{/each}}
            </a>
        </tbody>
    </table>
    {{/if}}
</section>
</div>
{{#if message}}
{{else}}
<div class="pr-3 pt-1">
    <section class="container bg-secondary float-right" style="width:28%;height:40px">
        <h2 class="text-center font-weight-normal">TOTAL</h2>
    </section>
    <div class=" float-right" style="width:28%">
        {{#each total}}
        <h3  style="margin-top:40px;padding-bottom:18px;margin-left:200px;font-family:font-family: 'Ubuntu', sans-serif;">â‚¹ {{this.total}}/-</h3>
        {{/each}}
        <button style="margin-left:280px" class="btn btn-success">Check out</button>
    </div>
</div>
{{/if}}
</body>


